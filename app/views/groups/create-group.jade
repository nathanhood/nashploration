extends ../shared/template

block content

  .content-wrapper
    mixin back('Create Group')

    .error-messages

    .create-group-wrapper
      form#new-group-form(action='/groups/create', method='POST')
        input(type='text', name='title', placeholder='Group Name Here')
        textarea(type='text', name='description', placeholder='Group Description Here', maxlength='140')
        input.hidden(type='text', name='names', hidden=true)
        input.hidden(type='text', name='emails', hidden=true)
      .border

      span#total-group-members Members: 0
      #add-group-member
        button + Add a Member
      #add-member-form(hidden=true)
        input(type='email', name='email', placeholder='Member Email')
        input(type='text', name='name', placeholder='Member Name')
        br
        button#close-member-button Close
        button#add-member-button Add
      .border
      ul.added-members
      button#build-group Build Group

block scripts
  script(src='/js/es6/compiled/create-group.js')
