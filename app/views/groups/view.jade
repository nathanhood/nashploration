extends ../shared/template

block content
  
  .content-wrapper
    mixin back('Manage Groups')
    
    if (deleteGroupConfirm.length > 0)
      .messages
        p= deleteGroupConfirm

    .manage-groups-wrapper
      h2 Your Groups
      ul
        if (groups.length > 0)
          each group in groups
            li
              p.group-name.inline= group.name
              a.group-view(href='/groups/show/#{group._id}') View
        else
          li
            p You have not joined any groups.
            p Groups are by invite only.
            br

      h2 Manage Groups You Created
      
      ul
        if (createdGroups.length > 0)
          each group in createdGroups
            li
              p.group-name.inline= group.name
              a.group-edit(href='/groups/edit/#{group._id}') edit
        else
          li
            p You have not created any groups
            a(href='/groups/new')
              button Create Group

block scripts
  script(src='/js/es6/compiled/view-groups.js')
