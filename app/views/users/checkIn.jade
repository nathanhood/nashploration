extends ../shared/template

block content

  .content-wrapper
    .checkin-wrapper
      mixin back('Check In')

      .checkin-content-wrapper
        h1= location.name
        p= location.description

        form(action='/users/checkin/#{location._id}/?lat=#{location.loc[1]}&lng=#{location.loc[0]}', method='POST')
         textarea(rows='5', columns='50', name='comment', placeholder="Leave your comment here.")
         button Check In

        if(prevCheckInStatus)
          .border
          p.center You can check into a location multiple times but it will only be counted to your score for leveling up and badges once.
